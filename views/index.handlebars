
<img class='burger-img' src="/assets/img/burger.jpg" alt="" srcset="">

<h1>Eat-Da-Buger!</h1>


<div class="burger-list">
    <ul class="not-devoured">
    {{#each burgers}}
        {{#unless devoured}}
        <li>
            {{this.burger_name}}
        </li>
            <button class='change-devoured' data-id="{{id}}" data-devoured='{{devoured}}'>Devoured</button>
        <br>
        {{/unless}}
    {{/each}}
    </ul>

    <ul class="devoured">
        {{#each burgers}}
            {{#if devoured}}
            <li>
                {{this.burger_name}}
                <button class='change-devoured' data-id="{{id}}" data-devoured='{{devoured}}'>Make burger</button>
            </li>
            {{/if}}

        {{/each}}
    </ul>
</div>


<form class="create-from">

    <input type="text" id="bg" name="name">

    <button type="submit">Submit</button>

    <p>Click 'Submit' to add the new burger</p>

</form>